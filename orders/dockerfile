# Stage 1: Build the binary
FROM golang:1.24.0-alpine AS builder
WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN go build -o ordersservice .

# Stage 2: Create minimal runtime image
FROM alpine:latest
WORKDIR /root/

COPY --from=builder /app/ordersservice .

EXPOSE 8084
CMD ["./ordersservice"]
